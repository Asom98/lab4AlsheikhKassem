<!DOCTYPE html>
<html>

<head>
	<title>Admin Page</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}

		h1 {
			text-align: center;
			margin-top: 40px;
		}

		table {
			margin: 40px auto;
			border-collapse: collapse;
			width: 80%;
			max-width: 800px;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
		}

		th,
		td {
			padding: 12px;
			text-align: left;
			border-bottom: 1px solid #ddd;
		}

		th {
			background-color: #F2F2F2;
		}

		tr:hover {
			background-color: #f5f5f5;
		}

		td:nth-child(1) {
			width: 10%;
		}

		td:nth-child(3) {
			width: 20%;
		}
	</style>
</head>

<body>
	<h1>Admin Page</h1>
	<table>
		<thead>
			<tr>
				<th>User ID</th>
				<th>Name</th>
				<th>Role</th>
				<th>Password</th>
			</tr>
		</thead>
		<tbody>
			<% users.forEach(function(user) { %>
				<tr>
					<td>
						<%= user.id %>
					</td>
					<td>
						<%= user.username %>
					</td>
					<td>
						<%= user.role %>
					</td>
					<td>
						<%= user.password %>
					</td>
				</tr>
				<% }); %>
		</tbody>
	</table>
</body>

</html>